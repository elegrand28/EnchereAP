<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApS2.Vue.VueEnchereEnCours"
             Title="VueEnchereEnCours">
    <ScrollView >
        <VerticalStackLayout>
       


        <CollectionView ItemsSource="{Binding EnchereList}">

            <CollectionView.ItemTemplate>
                    <DataTemplate>

                        <StackLayout>
                        <Label Text="{Binding Leproduit.Nom }"/>
                        <Label Text="{Binding Leproduit.Prixreel}"/>
                        
                        <Image Source="{Binding Leproduit.Photo}"/>
                            </StackLayout>
                           

                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>