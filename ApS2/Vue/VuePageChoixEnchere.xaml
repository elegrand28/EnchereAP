<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApS2.Vue.VuePageChoixEnchere"
                Title="VuePageChoixEnchere">
    <ScrollView BackgroundColor="#333533">
        <VerticalStackLayout Padding="20" Spacing="60" VerticalOptions="Center" >
            <Button BackgroundColor="#F5CB5C"
                    HeightRequest="100"
                    WidthRequest="300"
                    Text="Enchère Classique"
                    FontSize="20" TextColor="#242423"
                    Clicked="OnClick" 
                    ImageSource="ico_encheres.png"/>
            <Button BackgroundColor="#F5CB5C"
                    HeightRequest="100"
                    WidthRequest="300"
                    Text="Enchère Inversé"
                    FontSize="20"
                    TextColor="#242423"
                    Clicked="OnClick2"
                    ImageSource="ico_encheres.png"/>
            <Button BackgroundColor="#F5CB5C"
                    HeightRequest="100"
                    WidthRequest="300" 
                    Text="Enchère Surprise"
                    FontSize="20"
                    TextColor="#242423"
                    Clicked="OnClick3"
                    ImageSource="ico_encheres.png"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>